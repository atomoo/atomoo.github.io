.sidebar.animated.fadeInDown
  .logo-title
    .title
      h3(title="")
        a(href="/")= config.title
      if theme.description
        .description
          p!= theme.description

  ul.social-links
    if theme.twitter
      li
        a(href="https://twitter.com/" + theme.twitter)
          i.fa.fa-twitter
    if theme.instagram
      li
        a(href="http://instagram.com/" + theme.instagram)
          i.fa.fa-instagram
    if theme.ask
      li
        a(href="https://ask.fm/" + theme.ask)
          i.fa.fa-question-circle
    if theme.weibo
      li
        a(href="http://weibo.com/" + theme.weibo)
          i.fa.fa-weibo
    if theme.facebook
      li
        a(href="http://facebook.com/" + theme.facebook)
          i.fa.fa-facebook
    if theme.github
      li
        a(href="http://github.com/" + theme.github)
          i.fa.fa-github
  include footer
